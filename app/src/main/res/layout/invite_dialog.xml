<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageAvator"
        android:layout_width="76dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_person" />


    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPhone"
        android:fontFamily="cursive"

        android:gravity="center"
        android:text="status"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imageAvator"
        android:gravity="center"
        android:text="Azharul Islam"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactName"
        android:gravity="center"
        android:text="01717-121839" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/inviteActionButton"
        style="@style/FabStyle"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textPhone"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/revertActionButton"
        style="@style/FabStyle"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textPhone"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="5dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />


</RelativeLayout>